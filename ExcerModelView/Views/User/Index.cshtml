@model IEnumerable<ExcerModelView.Models.User>

@{
    ViewBag.Title = "نمایش دانشجویان";
    int count = 1;


}

<div style="text-align:center" class="jumbotron">نمایش دانشجویان</div>

<p>
    @Html.ActionLink("ثبت نام جدید", "Create", null, new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            ردیف
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ncode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <br />
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>


        <th>عملیات</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @count
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Family)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Birthdate.Year)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ncode)
    </td>

    <td>
        @if (item.IsActive == true)
        {
            <span style="color:green">فعال</span>
        }
        else
        {
            <span style="color:red">غیرفعال</span>

        }
        @*@Html.DisplayFor(modelItem => item.IsActive)*@
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegisterDate.Year)
    </td>
    <br />
    <td>
        <img src="~/images/@item.Image" style="width:120px;height:120px;border-radius:120px" />
        @*@Html.DisplayFor(modelItem => item.Image)*@
    </td>

    <td>
        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
    count++;
}

</table>



@Html.Action("List");
